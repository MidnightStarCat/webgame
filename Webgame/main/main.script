function init(self)
	msg.post(".", "acquire_input_focus")
	msg.post("#TitleScreen", "load")
end

function on_input(self, action_id, action)
	if action_id == hash("spacebar") then
		msg.post("TitleScreen:/go#TitleScreen", "spacebar")
	end
	if action_id == hash("help") then
		msg.post("TitleScreen:/go#TitleScreen", "help")
	end

	if action_id == hash("left") then
		msg.post("TitleScreen:/go#TitleScreen", "left")
	end

	if action_id == hash("right") then
		msg.post("TitleScreen:/go#TitleScreen", "right")
	end	
end

function on_message(self, message_id, message, sender)
	if message_id == hash("proxy_loaded") then
		msg.post(sender, "init")
		msg.post(sender, "enable")
	end
end